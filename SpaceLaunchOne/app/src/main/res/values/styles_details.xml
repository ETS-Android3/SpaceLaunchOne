<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="details_nested_scroll" parent="matches_parent">
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
        <item name="android:background">@color/details_background</item>
    </style>

    <style name="details_layout" parent="matches_parent">
        <item name="android:paddingTop">@dimen/details_container_padding_top</item>
        <item name="android:background">@color/details_background</item>
        <item name="android:paddingBottom">@dimen/details_container_padding_bottom</item>
    </style>

    <style name="details_timer_container">
        <item name="android:layout_marginTop">@dimen/details_timer_margin_top</item>
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="details_card" parent="card">
        <item name="android:layout_width">@dimen/match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/details_card_margin_top</item>
        <item name="android:layout_marginStart">@dimen/details_card_margin_left</item>
        <item name="android:layout_marginEnd">@dimen/details_card_margin_right</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="details_card_layout" parent="details_card">
        <item name="android:layout_width">@dimen/details_content_max_width</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toBottomOf">@id/timerContainer</item>
        <item name="cardBackgroundColor">@color/default_activity_background</item>
    </style>

    <style name="details_rocket_image_card" parent="details_card">
        <item name="android:layout_width">@dimen/details_content_max_width</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toBottomOf">@id/Summary</item>
        <item name="android:visibility">@integer/visibility_gone</item>
        <item name="android:layout_marginTop">@dimen/details_card_margin_top</item>
        <item name="android:layout_marginStart">@dimen/details_card_margin_left</item>
        <item name="android:layout_marginEnd">@dimen/details_card_margin_right</item>
    </style>

    <style name="details_rocket_image">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">@dimen/match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="details_links_container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:padding">0dp</item>
        <item name="layout_constraintLeft_toLeftOf">@id/Summary</item>
        <item name="layout_constraintRight_toRightOf">@id/Summary</item>
        <item name="layout_constraintTop_toBottomOf">@id/Rocket</item>
    </style>

</resources>