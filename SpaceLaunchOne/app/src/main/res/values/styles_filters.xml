<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="filter_checkall_checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="filter_checkall_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:color">@color/primary_text</item>
        <item name="android:textSize">@dimen/filter_label_text_size</item>
        <item name="android:text">@string/check_uncheck_all</item>
        <item name="layout_constraintBottom_toBottomOf">@id/check_all</item>
        <item name="layout_constraintStart_toEndOf">@id/check_all</item>
        <item name="layout_constraintTop_toTopOf">@id/check_all</item>
    </style>

    <style name="filter_checkall_divider">
        <item name="android:layout_width">@dimen/match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:background">@color/filter_divider_color</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toBottomOf">@id/check_all</item>
    </style>

    <style name="filter_recycler_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toBottomOf">@id/divider</item>
    </style>

    <style name="filter_list_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginEnd">@dimen/filter_item_margin_end</item>
        <item name="android:layout_marginStart">@dimen/filter_item_margin_start</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="filter_text">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/filter_label_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:color">@color/primary_text</item>
    </style>

    <style name="filter_checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_marginEnd">@dimen/fitler_checkbox_gap</item>
    </style>

</resources>