<!--suppress AndroidDomInspection -->
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="alertDialogTheme">@style/Theme.AppCompat.DayNight.Dialog.Alert</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:itemBackground">@color/menu_background</item>
        <item name="actionMenuTextColor">@color/primary_text</item>
        <item name="android:actionMenuTextColor">@color/primary_text</item>
        <item name="android:editTextColor">@color/primary_text</item>
        <item name="colorControlNormal">@color/primary_text</item>
    </style>

    <style name="TabbedActivityTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="alertDialogTheme">@style/Theme.AppCompat.DayNight.Dialog.Alert</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:actionMenuTextColor">@color/primary_text</item>
        <item name="actionMenuTextColor">@color/primary_text</item>
        <item name="android:editTextColor">@color/primary_text</item>
        <item name="colorControlNormal">@color/primary_text</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_splash_background</item>
    </style>

    <style name="CreditsTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:itemBackground">@color/menu_background</item>
        <item name="actionMenuTextColor">@color/primary_text</item>
        <item name="android:actionMenuTextColor">@color/primary_text</item>
        <item name="android:editTextColor">@color/primary_text</item>
        <item name="colorControlNormal">@color/primary_text</item>
        <item name="android:background">@color/default_activity_background</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="colorAccent">@color/textLinkColor</item>
        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@null</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="AlertDialogCustom" parent="@style/Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:background">@color/menu_background</item>
    </style>

</resources>
