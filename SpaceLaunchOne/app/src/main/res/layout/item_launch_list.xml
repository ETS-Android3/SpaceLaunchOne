<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_container"
    style="@style/list_item"
    tools:ignore="MissingConstraints">

    <androidx.cardview.widget.CardView
        android:id="@+id/thumbnail_card"
        style="@style/list_image_card">

        <ImageView
            android:id="@+id/thumbnail"
            style="@style/list_image"
            tools:ignore="ContentDescription" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title"
        style="@style/list_primary_text_layout" />

    <TextView
        android:id="@+id/sub_line_1"
        style="@style/list_secondary_text_line_1" />

    <TextView
        android:id="@+id/sub_line_2"
        style="@style/list_secondary_text_line_2" />

    <TextView
        android:id="@+id/list_number"
        style="@style/list_number" />

    <TextView
        android:id="@+id/status"
        style="@style/list_status" />

    <View style="@style/list_divider" />

</androidx.constraintlayout.widget.ConstraintLayout>