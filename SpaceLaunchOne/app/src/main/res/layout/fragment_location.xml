<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/matches_parent"
    android:background="@color/default_activity_background">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/list_appbar_layout"
        style="@style/list_appbar_layout">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/next_launch_fragment_height"
            android:minHeight="?attr/actionBarSize"
            android:layout_gravity="top"
            app:contentScrim="?attr/colorPrimaryDark"
            app:scrimAnimationDuration="250"
            app:layout_scrollFlags="scroll"
            app:titleEnabled="false">

            <fragment
                android:id="@+id/LocationMap"
                android:name="io.github.nkrusch.spacelaunchone.features.locations.details.LocationMapFragment"
                android:layout_width="match_parent"
                app:layout_collapseMode="parallax"
                android:layout_height="@dimen/next_launch_fragment_height" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <fragment
        android:id="@+id/Pads"
        android:name="io.github.nkrusch.spacelaunchone.features.locations.details.LocationPadsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
